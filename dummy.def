Bootstrap: docker
From: ubuntu:latest

%post
    # This section is intentionally minimal
    echo "Running minimal post section..."
    apt-get update && apt-get install -y --no-install-recommends cowsay && apt-get clean && rm -rf /var/lib/apt/lists/*

%environment
    # Minimal environment
    export PATH=/usr/games:$PATH # Add path for cowsay

%runscript
    # Minimal runscript
    echo "Minimal container running..."
    cowsay "Build Test Successful!"

%labels
    Maintainer "Build Test"
    Version 1.0
